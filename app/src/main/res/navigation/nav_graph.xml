<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.AuthFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_auth" />
    <fragment
        android:id="@+id/inboxFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.InboxFragment"
        android:label="@string/inbox"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/draftFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.DraftFragment"
        android:label="@string/draft"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/trashFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.TrashFragment"
        android:label="@string/trash"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/sentFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.SentFragment"
        android:label="@string/sent"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/junkFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.JunkFragment"
        android:label="@string/junk"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/mailItemsFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.MailItemsFragment"
        android:label=""
        tools:layout="@layout/fragment_mail_items">
        <argument
            android:name="conversationId"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/mailItemFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.MailItemFragment"
        android:label=""
        tools:layout="@layout/fragment_mail_item">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/composeFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.ComposeFragment"
        android:label="Compose Mail"
        tools:layout="@layout/fragment_web_view" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.AboutFragment"
        android:label="@string/about_us"
        tools:layout="@layout/fragment_web_view" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@xml/root_preferences" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.SplashFragment"
        android:label=""
        tools:layout="@layout/fragment_splash" />
    <fragment
        android:id="@+id/newFeaturesFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.NewFeaturesFragment"
        android:label="@string/new_features"
        tools:layout="@layout/fragment_web_view" />
    <fragment
        android:id="@+id/privacyPolicyFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.PrivacyPolicyFragment"
        android:label="@string/privacy_policy"
        tools:layout="@layout/fragment_web_view" />
    <fragment
        android:id="@+id/termsAndConditionsFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.TermsAndConditionsFragment"
        android:label="@string/terms_conditions"
        tools:layout="@layout/fragment_web_view" />

    <action
        android:id="@+id/action_to_authFragment"
        app:destination="@id/authFragment" />
    <action
        android:id="@+id/action_to_inboxFragment"
        app:destination="@id/inboxFragment" />
    <action
        android:id="@+id/action_to_mailItemFragment"
        app:destination="@id/mailItemFragment">
        <argument
            android:name="id"
            app:argType="string" />
    </action>
    <action
        android:id="@+id/action_to_mailItemsFragment"
        app:destination="@id/mailItemsFragment">
        <argument
            android:name="conversationId"
            app:argType="string" />
        <argument
            android:name="id"
            app:argType="string" />
    </action>
    <action
        android:id="@+id/action_to_composeFragment"
        app:destination="@id/composeFragment" />

</navigation>