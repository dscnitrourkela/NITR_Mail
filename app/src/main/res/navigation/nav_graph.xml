<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/authFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.AuthFragment"
        android:label="Owl Mail"
        tools:layout="@layout/fragment_auth" />
    <fragment
        android:id="@+id/inboxFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.InboxFragment"
        android:label="Inbox"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/draftFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.DraftFragment"
        android:label="Draft"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/trashFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.TrashFragment"
        android:label="Trash"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/sentFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.SentFragment"
        android:label="Sent"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/junkFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.JunkFragment"
        android:label="Junk"
        tools:layout="@layout/fragment_mail_box" />
    <fragment
        android:id="@+id/mailItemFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.MailItemFragment"
        android:label="Owl Mail"
        tools:layout="@layout/fragment_mail_item">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/composeFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.ComposeFragment"
        android:label="Compose Mail"
        tools:layout="@layout/fragment_compose" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.AboutFragment"
        android:label="About Us"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@xml/root_preferences" />

    <action
        android:id="@+id/action_to_authFragment"
        app:destination="@id/authFragment" />
    <action
        android:id="@+id/action_to_inboxFragment"
        app:destination="@id/inboxFragment" />
    <action
        android:id="@+id/action_to_mailItemFragment"
        app:destination="@id/mailItemFragment">
        <argument
            android:name="id"
            app:argType="string" />
    </action>
    <action
        android:id="@+id/action_to_composeFragment"
        app:destination="@id/composeFragment" />

</navigation>